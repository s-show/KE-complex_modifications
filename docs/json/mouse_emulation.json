{
  "title": "Operate mouse with keyboard",
  "rule_list": false,
  "make_extra_description": true,
  "rules": [
    {
      "description": "left ctrl-shift + hjkl -> mouse_wheel scroll (left/down/up/right)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "left_control"
              },
              {
                "key_code": "left_shift"
              }
            ]
          },
          "to": [
            {
              "set_variable": {
                "name": "mouse_mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "mouse_mode",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "h"
          },
          "to": [
            {
              "mouse_key": {
                "horizontal_wheel": 64
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "mouse_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j"
          },
          "to": [
            {
              "mouse_key": {
                "vertical_wheel": 64
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "mouse_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "k"
          },
          "to": [
            {
              "mouse_key": {
                "vertical_wheel": -64
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "mouse_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l"
          },
          "to": [
            {
              "mouse_key": {
                "horizontal_wheel": -64
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "mouse_mode",
              "value": 1
            }
          ]
        }
      ]
    },
    {
      "description": "left ctrl-shift + ←↑↓→ -> mouse_corsor move (left/up/down/right)",
