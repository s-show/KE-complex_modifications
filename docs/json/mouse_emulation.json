            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow"
          },
          "to": [
            {
              "mouse_key": {
                "x": 960
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "mouse_mode",
              "value": 1
            }
          ]
        }
      ]
    },
    {
      "description": "left ctrl-shift + spacebar -> mouse left click",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "left_control"
              },
              {
                "key_code": "left_shift"
              }
            ]
          },
          "to": [
            {
