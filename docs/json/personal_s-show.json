    {
      "description": "Double tap 'keypad_period' to 'comma'",
      "extra_description_level": 1,
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "keypad_period"
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            },
            {
              "key_code": "comma"
            },
            {
              "set_variable": {
                "name": "press_period_key",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "press_period_key",
              "value": 1
